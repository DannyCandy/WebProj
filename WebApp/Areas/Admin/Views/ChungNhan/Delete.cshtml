@model WebApp.Models.ChungNhan

<h2>Are you sure you want to delete this?</h2>

    <div>
        <h4 class="mt-2">MoTa: @Model.MoTa</h4>
        <h4 class="mt-2">HinhAnh</h4>

        @if (Model.HinhAnhChungNhan is not null)
        {
            <img src="@Model.HinhAnhChungNhan" alt="Product Image" class="img-thumbnail mt-2" style="width: 300px" />
        }
    </div>

    <form asp-action="Delete" method="post" class="mt-2">
        <input type="hidden" asp-for="IdchungNhan" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-success">Cancel</a>
    </form>
@section Scripts {
}