@model WebApp.Models.SanPham
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Edit Product";
}

<h2>Edit Product</h2>
<form asp-action="Update" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="SpName"></label>
        <input asp-for="SpName" class="form-control" />
        <span asp-validation-for="SpName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MoTa"></label>
        <textarea asp-for="MoTa" class="form-control"></textarea>
        <span asp-validation-for="MoTa" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CongDung"></label>
        <textarea asp-for="CongDung" class="form-control"></textarea>
        <span asp-validation-for="CongDung" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ThanhPhanDinhDuong"></label>
        <textarea asp-for="ThanhPhanDinhDuong" class="form-control"></textarea>
        <span asp-validation-for="ThanhPhanDinhDuong" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Hdsd"></label>
        <textarea asp-for="Hdsd" class="form-control"></textarea>
        <span asp-validation-for="Hdsd" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Idcategory">Category</label>
        <select asp-for="Idcategory" asp-items="@ViewBag.Categories" class="form-control"></select>
        <span asp-validation-for="Idcategory" class="text-danger"></span> <!-- Phản hồi lỗi cho trường CategoryId -->
    </div>
    <div class="form-group">
        <label asp-for="HinhAnhSp">Product Image</label>
        <input id="inputImg" type="file" asp-for="HinhAnhSp" class="form-control" />
        @if (Model.HinhAnhSp is not null)
        {
            <img id="imgViewer" src="data:image/*;base64,@(Convert.ToBase64String(Model.HinhAnhSp))" alt="Product Image" style="max-width: 200px;" />
        }
        else
        {
            
            <img id="imgViewer" class="img-thumbnail" alt="Product Image" src="~/images/0d64989794b1a4c9d89bff571d3d5842.jpg" style="max-width: 200px;" />
            
        }
        <span asp-validation-for="HinhAnhSp" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary m-1">Update</button>
    <a asp-action="Index" class="btn btn-success m-1">Cancel</a>
</form>

@section Scripts {
    <script>
        $("#inputImg").change((e) => {
            var files = e.target.files;
            $("#imgViewer").attr("src", window.URL.createObjectURL(files[0]))
        })
    </script>
}